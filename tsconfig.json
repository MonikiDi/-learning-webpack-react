{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      // esModuleInterop позволяет работать с пакетами, которые используют common js как с обычными пакетами с помощью import require() module.export
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }